<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.id.man.greatjobs.TawaranActivity"
    android:background="@color/main"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:background="@color/bar"
        android:orientation="horizontal">
        <Button
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginLeft="30px"
            android:onClick="btn_back"/>

        <TextView
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Penyediaan Karyawan"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Nama Perusahaan"
            android:textSize="25px"
            android:layout_height="90px" />
        <TextView
            android:layout_width="550px"
            android:layout_height="match_parent"
            android:textColor="@color/bar"
            android:layout_marginTop="50px"
            android:text="Mencari Pekerja dengan Persyaratan :"
            android:textSize="25px"/>
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Bidang Pekerjaan"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Keahlian"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Gaji Perbulan"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Min. Lulusan"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Jam Kerja"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30px"
        android:gravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:background="@color/bar"
                android:onClick="btn_submit"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
