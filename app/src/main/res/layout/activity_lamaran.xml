<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.id.man.greatjobs.LamaranActivity"
    android:background="@color/main"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:background="@color/bar"
        android:orientation="horizontal">
        <Button
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginLeft="30px"
            android:onClick="btn_back"/>

        <TextView
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Sign up"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="30px"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Nama"
            android:textSize="25px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="No. Phone"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Alamat"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Tanggal Lahir"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Jenis Kelamin"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="No. KTP"
            android:textSize="30px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Email"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
        <EditText
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="20px"
            android:hint="Password"
            android:textSize="25px"
            android:layout_marginTop="8px"
            android:layout_height="90px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30px"
        android:gravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="550px"
                android:layout_height="match_parent"
                android:textColor="@color/bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="By proceeding you also agree to the Terms of Service and Privacy Policy"
                android:textSize="20px"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:background="@color/bar"
                android:onClick="btn_signup"/>

            <TextView
                android:layout_width="550px"
                android:layout_height="match_parent"
                android:textColor="@color/bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30px"
                android:text="Already have an account? Sign in"
                android:textSize="20px"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
